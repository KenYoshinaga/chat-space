.side-bar
  .user-name
    .top-items
      -# .name
      = current_user.name
      .icons
        = link_to edit_user_path(current_user), class: "icons-btn" do
          = icon('fa','cog')
        = link_to new_group_path, class: "icons-btn setting" do
          = icon('far', 'edit')

  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group-name
            = group.name
          %p.message
            = group.show_last_message
            
